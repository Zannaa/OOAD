        <Label Content="Radna evidencija&#xD;&#xA;" HorizontalAlignment="Left" Margin="200,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,0.731"/>
        <Button Content="Obračunaj" HorizontalAlignment="Left" Margin="565,298,0,0" VerticalAlignment="Top" Width="110" Click="Button_Click"/>
        <StatusBar HorizontalAlignment="Left" Height="21" Margin="0,340,-2,0" VerticalAlignment="Top" Width="696"/>
        <ListBox x:Name="Lista" HorizontalAlignment="Left" Height="226" Margin="20,49,0,0" VerticalAlignment="Top" Width="165" SelectionChanged="Lista_SelectionChanged"/>
        <ListBox x:Name="ListBox2" HorizontalAlignment="Left" Height="150" Margin="200,125,0,0" VerticalAlignment="Top" Width="475"/>

    </Grid>
</Window>